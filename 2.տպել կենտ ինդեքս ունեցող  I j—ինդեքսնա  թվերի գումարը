public class Main {
    public static void main(String[] args) {
      int a2[][]= {

          {1,2,3,4},
          {4,3,2,1},
          {5,6,7,8},
        };

      int sum=0;
        for(int i=0;i<a2.length;i++){//0
            for(int k=0; k<a2[i].length;k++){//0.1.2
                if((i + k) %2!=0){
                    System.out.println(a2[i][k]);
                     sum+=a2[i][k];

                }

            }



        }
    System.out.print(sum);

    }

}
